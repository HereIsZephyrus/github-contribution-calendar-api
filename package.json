{
  "name": "github-contribution-calendar-api",
  "version": "1.0.0",
  "main": "build/github-contribution-calendar/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build:workers": "cfw build",
    "build:pages": "yarn twind --no-watch",
    "deploy": "cfw deploy",
    "dev:workers": "chokidar 'workers/api/*' --initial -c 'yarn build:workers' & miniflare build/github-contribution-calendar/index.js -p 3000 -w",
    "dev:pages": "sirv pages -p 3000 -D & yarn twind",
    "twind": "twind-cli pages/dev/index.html -o pages/index.html -c pages/dev/twind.config.js",
    "format": "prettier --write --ignore-path .gitignore . '!pages/prism.js'"
  },
  "dependencies": {
    "@rschristian/twind-cli": "^0.2.1"
  },
  "devDependencies": {
    "cfw": "^0.3.0",
    "chokidar-cli": "^3.0.0",
    "miniflare": "^1.3.3",
    "prettier": "^2.6.2",
    "prettier-config-rschristian": "^0.1.1",
    "sirv-cli": "^2.0.2",
    "typescript": "^4.6.4",
    "worktop": "^0.7.3"
  },
  "prettier": "prettier-config-rschristian"
}
