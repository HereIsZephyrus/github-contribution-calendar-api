{
  "name": "github-contribution-calendar-api",
  "version": "1.0.0",
  "main": "build/github-contribution-calendar/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build:workers": "cfw build",
    "build:pages": "node pages/dev/twind-processor.js",
    "deploy": "cfw deploy",
    "dev:workers": "miniflare build/github-contribution-calendar/index.js -p 3000 -w",
    "dev:pages": "sirv pages -p 3000 -D & chokidar --initial 'pages/dev/{index.html,twind-processor.js}' -c 'yarn build:pages'",
    "format": "prettier --write --ignore-path .gitignore . '!pages/prism.js'"
  },
  "dependencies": {
    "cfw": "^0.2.0",
    "html-minifier-terser": "^5.1.1",
    "twind": "^0.16.16",
    "worktop": "^0.7.1"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "miniflare": "^1.3.3",
    "prettier": "^2.3.2",
    "prettier-config-rschristian": "^0.1.1",
    "sirv-cli": "^1.0.14"
  },
  "prettier": "prettier-config-rschristian"
}
